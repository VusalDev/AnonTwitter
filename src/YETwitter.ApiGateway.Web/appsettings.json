{
    "AllowedHosts": "*",
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information",
                "System": "Warning"
            }
        }
    },
    "yarp": {
        "routes": {
            "identity": {
                "clusterId": "identity",
                "corsPolicy": "AllowAll",
                "match": {
                    "path": "/api/{version}/auth/{**catch-all}"
                },
                "transforms": [
                    { "pathPattern": "/api/{version}/auth/{**catch-all}" }
                ]
            }
        },
        "clusters": {
            "identity": {
                "destinations": {
                    "destination1": {
                        "address": "https://localhost:7263"
                    }
                }
            }
        }
    }
}
