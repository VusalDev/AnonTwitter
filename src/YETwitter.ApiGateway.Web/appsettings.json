{
    "AllowedHosts": "*",
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information",
                "System": "Warning"
            }
        }
    },
    "ElasticConfiguration": {
        "Uri": "http://localhost:9200"
    },
    "cors": {
        "origins": [
            "http://localhost:5000",
            "http://localhost:4200"
        ]
    },
    "yarp": {
        "routes": {
            "identity": {
                "clusterId": "identity",
                "corsPolicy": "AllowAll",
                "match": {
                    "path": "/api/{version}/auth/{**catch-all}"
                },
                "transforms": [
                    { "pathPattern": "/api/{version}/auth/{**catch-all}" }
                ]
            },
            "front": {
                "clusterId": "front",
                "corsPolicy": "AllowAll",
                "match": {
                    "path": "/{**catch-all}"
                },
                "transforms": [
                    { "pathPattern": "/{**catch-all}" }
                ]
            }
        },
        "clusters": {
            "identity": {
                "destinations": {
                    "destination1": {
                        "address": "https://localhost:7263"
                    }
                }
            },
            "front": {
                "destinations": {
                    "destination1": {
                        "address": "http://localhost:4200"
                    }
                }
            }
        }
    }
}
